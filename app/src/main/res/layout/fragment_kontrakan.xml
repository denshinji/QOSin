<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_kontrakan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true">

    <ProgressBar
        android:id="@+id/pb_frag_kontrakan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <SearchView
        android:id="@+id/searchview_kontrakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:queryHint="Cari Kontrakan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view_kontrakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        tools:listitem="@layout/item_kost" />

    <ImageView
        android:id="@+id/img_no_data_kontrakan"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:background="@drawable/no_data"
        android:visibility="gone" />
</FrameLayout>